<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane
    maxHeight="-Infinity"
    maxWidth="-Infinity"
    minHeight="-Infinity"
    minWidth="-Infinity"
    prefHeight="400.0"
    prefWidth="500.0"
    xmlns="http://javafx.com/javafx/17"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="cowpay.MainWindow"
    style="-fx-background-color: #1E4F8C;">

    <children>
        <!-- ScrollPane fill everything above input bar -->
        <ScrollPane
                fx:id="scrollPane"
                hbarPolicy="NEVER"
                hvalue="1.0"
                vbarPolicy="ALWAYS"
                vvalue="1.0"
                fitToWidth="true"
                AnchorPane.topAnchor="0.0"
                AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0"
                AnchorPane.bottomAnchor="41.0"
                style="-fx-background: #2a2a2a;">
            <content>
                <VBox
                    fx:id="dialogContainer"
                    fillWidth="true"
                    spacing="8.0" 
                    style="-fx-background-color: #2a2a2a;"/>
            </content>
        </ScrollPane>

        <!-- Input field pinned left until button -->
        <TextField
            fx:id="userInput"
            onAction="#handleUserInput"
            prefHeight="41.0"
            AnchorPane.leftAnchor="0.0"
            AnchorPane.rightAnchor="76.0"
            AnchorPane.bottomAnchor="0.0"
            style="-fx-background-color: #4b4b4b;
                -fx-text-fill: white;
                -fx-font-size: 18px;"/>

        <!-- Send button pinned right -->
        <Button
            fx:id="sendButton"
            mnemonicParsing="false"
            onAction="#handleUserInput"
            prefHeight="41.0"
            prefWidth="76.0"
            text="Send"
            AnchorPane.rightAnchor="0.0"
            AnchorPane.bottomAnchor="0.0" />
    </children>

</AnchorPane>
